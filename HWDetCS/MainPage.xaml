<Page x:Class="HWDetCS.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HWDetCS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" MinWidth="1280" MinHeight="720">

    <Grid>
        <DockPanel LastChildFill="False" MinWidth="1280" MinHeight="720">
            <DockPanel.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
            </DockPanel.Background>
            <Button x:Name="Button1" Foreground="#FF007ACC" FontSize="48" Focusable="False" Margin="20" Content="CPU" MinWidth="200" MinHeight="100" Background="#FF2D2D30" Click="MainPageButton1_Click"/>
            <Button x:Name="Button2" Foreground="#FF007ACC" FontSize="48" Focusable="False" IsHitTestVisible="False" Content="GPU" Margin="20" MinWidth="200" MinHeight="100" Background="#FF2D2D30"/>
            <Button x:Name="Button3" Content="RAM" Margin="20" MinWidth="200" MinHeight="100" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="#FF2D2D30" Foreground="#FF007ACC" FontSize="48" IsHitTestVisible="False" Focusable="False"/>
        </DockPanel>
    </Grid>
</Page>
